-#  This file is app/views/search_tmdb.html.haml
%h1 The following movies containing '@searchTerm' were not found on TMDB

= form_tag add_tmdb_path do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @searchMovies.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"
        
  = submit_tag 'Add Selected Movies'
        

= link_to 'Return to Movie List', movie_path